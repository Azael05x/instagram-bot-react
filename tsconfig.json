{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "./defs.d.ts"
  ],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "allowSyntheticDefaultImports": false,
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@ducks/*": ["src/ducks/*"],
      "@texts": ["src/texts/texts"],
      "@types": ["src/types"],
      "@consts": ["src/consts/consts.ts"],
      "@middleware/*": ["src/middleware/*"]
    }
  }
}
